# Bot Configuration
MODE=dev
BOT_TOKEN=your_bot_token_here
TARGET_CHAT_ID="-100xxxxxxxxx"
ADMIN_REVIEW_CHAT_ID="-100xxxxxxxxx"
JOIN_LINK=https://t.me/+xxxxxxxxx

# Logging
LOG_LEVEL=info

# Persistence (Optional selection, defaults to D1 if DB binding exists)
STORAGE_TYPE=d1

# Webhook (Required for prod - must be your deployed worker URL)
PUBLIC_BASE_URL=https://your-bot.workers.dev
WEBHOOK_SECRET_TOKEN=generate_a_random_secure_string

# Business Logic Configuration
REASON_TTL_SECONDS=604800
MAX_REASON_CHARS=500
MIN_REASON_WORDS=10
TIMEZONE=Europe/Berlin
