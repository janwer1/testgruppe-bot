{
  "name": "telegram-join-request-bot",
  "version": "1.0.0",
  "type": "module",
  "description": "Production-ready Telegram bot for join request review",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run --watch src/dev.ts",
    "dev:debug": "bun --inspect --watch src/dev.ts",
    "dev:inspect": "bun --inspect src/dev.ts",
    "start": "bun src/index.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "webhook-setup": "bun src/webhook-setup.ts"
  },
  "dependencies": {
    "@fluent/bundle": "^0.19.1",
    "@grammyjs/conversations": "^2.1.1",
    "@grammyjs/storage-redis": "^2.5.1",
    "@t3-oss/env-core": "^0.13.10",
    "@upstash/redis": "^1.36.1",
    "dotenv": "^17.2.3",
    "grammy": "^1.39.3",
    "xstate": "^5.25.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.10",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=24.0.0",
    "bun": ">=1.0.0"
  }
}
