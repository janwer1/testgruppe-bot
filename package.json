{
  "name": "telegram-join-request-bot",
  "version": "1.0.0",
  "type": "module",
  "description": "Production-ready Telegram bot for join request review",
  "main": "src/worker.ts",
  "scripts": {
    "dev": "bun run --watch src/dev.ts",
    "dev:worker": "wrangler dev",
    "dev:debug": "bun --inspect --watch src/dev.ts",
    "dev:inspect": "bun --inspect src/dev.ts",
    "start": "wrangler dev",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome check .",
    "format": "biome format . --write",
    "webhook:setup": "bun src/scripts/webhook.ts setup",
    "webhook:get": "bun src/scripts/webhook.ts get",
    "webhook:test": "bun src/scripts/webhook.ts test",
    "postinstall": "bun run webhook:setup",
    "deploy": "wrangler deploy"
  },
  "dependencies": {
    "@std/ulid": "npm:@jsr/std__ulid",
    "@t3-oss/env-core": "^0.13.10",
    "@upstash/redis": "^1.36.1",
    "grammy": "^1.39.3",
    "pino": "^10.3.0",
    "xstate": "^5.26.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@cloudflare/workers-types": "^4.20260127.0",
    "@types/bun": "^1.3.6",
    "dotenv": "^17.2.3",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3",
    "wrangler": "^4.61.0"
  },
  "engines": {
    "node": "24.x",
    "bun": "1.x"
  }
}
