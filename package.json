{
  "name": "telegram-join-request-bot",
  "version": "1.0.0",
  "type": "module",
  "description": "Production-ready Telegram bot for join request review",
  "main": "src/worker.ts",
  "scripts": {
    "dev": "bun run --watch src/dev.ts",
    "dev:debug": "bun --inspect --watch src/dev.ts",
    "dev:inspect": "bun --inspect src/dev.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome check .",
    "format": "biome format . --write",
    "webhook:setup": "sh -c 'bun src/scripts/webhook.ts setup \"$@\" | pino-pretty' --",
    "webhook:get": "sh -c 'bun src/scripts/webhook.ts get \"$@\" | pino-pretty' --",
    "webhook:test": "sh -c 'bun src/scripts/webhook.ts test \"$@\" | pino-pretty' --",
    "postinstall": "bun run webhook:setup",
    "dev:worker": "sh -c 'bun src/dev-worker.ts \"$@\" | pino-pretty' --",
    "deploy": "wrangler deploy",
    "tail": "sh -c 'bunx wrangler tail testgruppe-bot | pino-pretty'"
  },
  "dependencies": {
    "@std/ulid": "npm:@jsr/std__ulid",
    "@t3-oss/env-core": "^0.13.10",
    "arktype": "^2.1.29",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "grammy": "^1.39.3",
    "pino": "^10.3.0",
    "superjson": "^2.2.6",
    "ulid": "^3.0.2",
    "xstate": "^5.26.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@cloudflare/workers-types": "^4.20260127.0",
    "@types/bun": "^1.3.8",
    "dotenv": "^17.2.3",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3",
    "wrangler": "^4.61.1"
  },
  "engines": {
    "node": "24.x",
    "bun": "1.x"
  }
}
